{
  "name": "YTDwl",
  "version": "1.1.1",
  "description": "Download youtube Audio",
  "manifest_version": 3,

  "background": {
    "service_worker": "js/src.js"
  },

  "content_scripts": [
    {
      "js": ["js/content.js"],
      "matches": ["*://*.youtube.com/watch?*"]
    }
  ],

  "permissions": [
    "contextMenus",
    "webRequest",
    "downloads",
    "scripting",
    "tabs",
    "*://*.youtube.com/*",
    "*://*.googlevideo.com/videoplayback?*"
  ],

  "icons": {
    "16": "/icons/16.png",
    "48": "/icons/48.png",
    "128": "/icons/128.png"
  }
}
